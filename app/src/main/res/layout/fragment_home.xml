<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="com.bluell.roomdecoration.interiordesign.ui.home.HomeFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03"
        android:orientation="horizontal"
        android:id="@+id/topguideline"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:id="@+id/start_guide_line"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:id="@+id/bottom_guide_line"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:id="@+id/end_guide_line"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.08"
        android:id="@+id/tool"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintTop_toBottomOf="@id/topguideline"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            android:textColor="@color/home_user_text"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:id="@+id/user_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/get_the_inspirations"
            android:textColor="@color/settings_email_text"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textSize="@dimen/_12sdp"
            android:textStyle="normal"
            android:id="@+id/welcome"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintBottom_toBottomOf="parent"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/home_crown"
            app:layout_constraintStart_toEndOf="@id/user_name"
            app:layout_constraintTop_toTopOf="@id/user_name"
            app:layout_constraintBottom_toBottomOf="@id/user_name"
            android:layout_marginBottom="@dimen/_2sdp"
            android:layout_marginStart="@dimen/_7sdp"
            />





        <com.google.android.material.card.MaterialCardView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintEnd_toStartOf="@id/profile_image"
            app:layout_constraintWidth_percent="0.2"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardBackgroundColor="@color/background"
            app:strokeWidth="@dimen/_1sdp"
            android:id="@+id/gems_bg"
            app:strokeColor="@color/premium_stroke_unselected"
            app:layout_constraintTop_toTopOf="parent"

            >
            <com.airbnb.lottie.LottieAnimationView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/gem_anim"
                app:lottie_autoPlay="true"
                app:lottie_loop="true"
                app:lottie_rawRes="@raw/gems_animation"
                />
        </com.google.android.material.card.MaterialCardView>

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            app:layout_constraintBottom_toBottomOf="@id/gems_bg"
            app:cardBackgroundColor="#30456D"
            app:strokeColor="#FFFFFF"
            app:cardCornerRadius="@dimen/_18sdp"
            app:layout_constraintStart_toStartOf="@id/gems_bg"
            app:layout_constraintEnd_toStartOf="@id/gems_bg"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_1000"
                android:layout_gravity="center"
                android:fontFamily="@font/pragatinarrow_regular"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:id="@+id/gemsTV"
                />

        </com.google.android.material.card.MaterialCardView>


        <ImageView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            app:layout_constraintWidth_percent="0.2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/profile_image"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_room_type"
        android:textColor="@color/home_user_text"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintTop_toBottomOf="@id/tool"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:id="@+id/room_select_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_all"
        android:textColor="@color/home_dark_color"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintTop_toBottomOf="@id/tool"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="normal"
        android:id="@+id/view_all_rooms"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/room_select_txt"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginTop="@dimen/_10sdp"
        tools:itemCount="10"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/room_type_item"
        android:id="@+id/rooms_type_rv"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_photo"
        android:textColor="@color/home_user_text"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintTop_toBottomOf="@id/rooms_type_rv"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:id="@+id/add_photo_txt"
        />



    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/add_photo_txt"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintHeight_percent="0.22"
        android:background="@drawable/settings_head"
        android:id="@+id/add_photo_head_image"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/living_room"
        app:layout_constraintTop_toTopOf="@id/add_photo_head_image"
        app:layout_constraintStart_toStartOf="@id/add_photo_head_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/pragatinarrow_regular"
        android:textColor="@color/onboarding_dark_text"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/head_txt_1"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tropical"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/head_txt_1"
        app:layout_constraintStart_toStartOf="@id/head_txt_1"
        android:fontFamily="@font/pragatinarrow_regular"
        android:textColor="@color/onboarding_dark_text"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/head_txt_2"
        />

    <com.google.android.material.button.MaterialButton
        android:layout_width="@dimen/_120sdp"
        android:layout_height="@dimen/_35sdp"
        app:layout_constraintBottom_toBottomOf="@id/add_photo_head_image"
        app:layout_constraintEnd_toEndOf="@id/add_photo_head_image"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginEnd="@dimen/_10sdp"
        app:backgroundTint="@color/onboarding_dark_text"
        app:icon="@drawable/add_light"
        app:iconSize="@dimen/_15sdp"
        app:iconTint="@color/white"
        android:text="@string/add_photo"
        android:textColor="@color/white"
        android:id="@+id/add_photo"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/select_room_style"
        android:textColor="@color/home_user_text"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintTop_toBottomOf="@id/add_photo_head_image"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_13sdp"
        android:textStyle="bold"
        android:id="@+id/select_room_style_txt"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/view_all"
        android:textColor="@color/home_dark_color"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintTop_toTopOf="@id/select_room_style_txt"
        android:layout_marginTop="@dimen/_5sdp"
        android:textSize="@dimen/_10sdp"
        android:textStyle="normal"
        android:id="@+id/view_all_styles_rooms"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/select_room_style_txt"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintHeight_percent="0.2"
        android:layout_marginTop="@dimen/_10sdp"
        tools:itemCount="10"
        android:orientation="horizontal"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/room_style_item"
        android:id="@+id/rooms_style_rv"/>


    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="@dimen/_40sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rooms_style_rv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7"
        app:cardBackgroundColor="@color/onboarding_dark_text"
        app:cardCornerRadius="@dimen/_30sdp"
        android:id="@+id/generate_interior"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="@string/generate"
            android:textSize="@dimen/_15sdp"
            android:fontFamily="@font/pragatinarrow_regular"
            android:layout_gravity="start|center_vertical"
            android:layout_marginStart="@dimen/_15sdp"
            />

        <com.airbnb.lottie.LottieAnimationView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_rawRes="@raw/next_arrow"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="@dimen/_15sdp"
            />



    </androidx.cardview.widget.CardView>




</androidx.constraintlayout.widget.ConstraintLayout>