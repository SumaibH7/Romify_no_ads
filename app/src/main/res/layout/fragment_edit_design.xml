<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bluell.roomdecoration.interiordesign.ui.edit.FragmentEditDesign">


    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03"
        android:orientation="horizontal"
        android:id="@+id/topguideline"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:id="@+id/start_guide_line"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:id="@+id/bottom_guide_line"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:id="@+id/end_guide_line"
        android:orientation="vertical"
        />

    <include
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_layout"
        app:layout_constraintStart_toStartOf="@id/start_guide_line"
        app:layout_constraintEnd_toEndOf="@id/end_guide_line"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/toolbar"
        />


    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/scroll"
        app:layout_constraintStart_toStartOf="@id/start_guide_line"
        app:layout_constraintEnd_toEndOf="@id/end_guide_line"
        app:layout_constraintTop_toBottomOf="@id/toolbar"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintGuide_percent="0.625"
                android:id="@+id/center_guide_line"
                android:orientation="horizontal"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/upload_image"
                android:textColor="@color/home_user_text"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/pragatinarrow_regular"
                android:id="@+id/add_photo_txt"
                />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:cardCornerRadius="@dimen/_15sdp"
                app:strokeWidth="@dimen/_1sdp"
                android:layout_marginTop="@dimen/_5sdp"
                app:layout_constraintTop_toBottomOf="@id/add_photo_txt"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/multiImageBox"
                app:cardBackgroundColor="@color/background"
                app:cardElevation="0dp"
                app:layout_constraintBottom_toTopOf="@id/center_guide_line">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:src="@drawable/home_head"
                        android:id="@+id/add_photo_head_image"
                        android:scaleType="centerCrop"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:visibility="gone"
                        android:id="@+id/imageBox"
                        app:layout_constraintTop_toTopOf="@id/add_photo_head_image"
                        app:layout_constraintStart_toStartOf="@id/add_photo_head_image"
                        app:layout_constraintEnd_toEndOf="@id/add_photo_head_image"
                        >

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/uploadedImage"
                            />

                        <com.google.android.material.progressindicator.CircularProgressIndicator
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:trackThickness="@dimen/_4sdp"
                            app:trackColor="@color/same"
                            app:trackCornerRadius="@dimen/_100sdp"
                            app:indicatorSize="@dimen/_30sdp"
                            app:indicatorColor="@color/image_color_filter"
                            android:indeterminate="true"
                            android:id="@+id/progressBar"
                            android:layout_centerInParent="true"
                            />

                        <RelativeLayout
                            android:layout_alignParentEnd="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="end|top"
                            android:id="@+id/cancelImageBox"
                            android:layout_margin="@dimen/_10sdp"
                            android:background="@drawable/indicator"
                            android:backgroundTint="@color/setting_circle">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/cancel"
                                android:id="@+id/cancelImage"
                                app:tint="@color/home_dark_color" />

                        </RelativeLayout>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/plus_Btn"
                        android:background="@drawable/button_background_plus"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/add_light"
                            android:padding="@dimen/_8sdp"/>
                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/enter_prompt"
                android:textColor="@color/home_user_text"
                app:layout_constraintTop_toBottomOf="@id/multiImageBox"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_13sdp"
                android:fontFamily="@font/pragatinarrow_regular"
                android:id="@+id/promptTxt"
                />

           <RelativeLayout
               android:layout_width="0dp"
               android:layout_height="@dimen/_125sdp"
               app:layout_constraintTop_toBottomOf="@id/promptTxt"
               app:layout_constraintBottom_toTopOf="@id/generatebtn"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               android:layout_marginTop="@dimen/_5sdp"
               android:layout_marginBottom="@dimen/_15sdp"
               app:cardBackgroundColor="@color/background"
               android:id="@+id/promptBox">

               <com.google.android.material.card.MaterialCardView
                   android:layout_width="match_parent"
                   android:layout_height="@dimen/_110sdp"
                   app:cardBackgroundColor="@color/background"
                   app:strokeColor="@color/dialog_stroke_color"
                   app:strokeWidth="@dimen/_1sdp"
                   >

                   <androidx.constraintlayout.widget.ConstraintLayout
                       android:layout_width="match_parent"
                       android:layout_height="match_parent">

                       <EditText
                           android:layout_width="match_parent"
                           android:layout_height="0dp"
                           android:minLines="4"
                           android:maxLines="4"
                           android:hint="@string/type_anything"
                           android:gravity="start"
                           android:fontFamily="@font/pragatinarrow_regular"
                           android:background="@color/background"
                           android:textColorHint="@color/edtcolor"
                           android:textColor="@color/edtcolor"
                           android:padding="@dimen/_5sdp"
                           android:textSize="@dimen/_12sdp"
                           android:inputType="textMultiLine"
                           android:imeOptions="actionDone"
                           android:scrollbars="vertical"
                           android:scrollbarStyle="insideInset"
                           android:overScrollMode="ifContentScrolls"
                           android:id="@+id/promptEdt"
                           app:layout_constraintHeight_percent="0.9"
                           app:layout_constraintTop_toTopOf="parent"
                           />


                       <ImageView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:src="@drawable/refresh_icon"
                           android:padding="@dimen/_5sdp"
                           app:layout_constraintBottom_toBottomOf="parent"
                           app:layout_constraintStart_toStartOf="parent"
                           android:id="@+id/clear_edt"
                           app:tint="@color/home_user_text" />


                       <TextView
                           android:layout_width="wrap_content"
                           android:layout_height="wrap_content"
                           android:text="@string/_0_100"
                           android:textColor="@color/home_user_text"
                           android:textSize="@dimen/_10sdp"
                           android:visibility="gone"
                           android:fontFamily="@font/pragatinarrow_regular"
                           app:layout_constraintEnd_toEndOf="parent"
                           app:layout_constraintBottom_toBottomOf="parent"
                           android:layout_marginEnd="@dimen/_5sdp"
                           android:layout_marginBottom="@dimen/_3sdp"
                           android:id="@+id/currentCharacters"
                           />

                   </androidx.constraintlayout.widget.ConstraintLayout>


               </com.google.android.material.card.MaterialCardView>

           </RelativeLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/promptBox"
                android:layout_marginHorizontal="@dimen/_20sdp"
                android:id="@+id/generatebtn"
                android:visibility="gone"
                android:background="@drawable/button_background_plus"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"

                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ad_icon"
                        android:visibility="gone"
                        />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginStart="@dimen/_15sdp"
                        android:orientation="vertical"
                        >
                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/generate"
                            android:fontFamily="@font/pragatinarrow_regular"
                            android:textColor="@color/white"
                            android:includeFontPadding="false"
                            android:textSize="@dimen/_15sdp"
                            android:id="@+id/generateText"
                            />

                        <TextView
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="@dimen/_18sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/watch_ad"
                            android:includeFontPadding="false"
                            android:visibility="gone"
                            android:fontFamily="@font/pragatinarrow_regular"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:layout_marginStart="@dimen/_10sdp"
                            />
                    </RelativeLayout>

                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>