<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.bluell.roomdecoration.interiordesign.ui.welcome.WelcomeFragment">
    
    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03"
        android:orientation="horizontal"
        android:id="@+id/topguideline"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.04"
        android:id="@+id/start_guide_line"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:id="@+id/bottom_guide_line"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.96"
        android:id="@+id/end_guide_line"
        android:orientation="vertical"
        />



    <androidx.viewpager2.widget.ViewPager2
        android:layout_width="match_parent"
    android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/skip_btn"
    android:id="@+id/onboardingViewPager" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/skip"
        android:layout_marginBottom="@dimen/_20sdp"
        style="@style/onboarding_text_style"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintBottom_toTopOf="@id/bottom_guide_line"
        android:id="@+id/skip_btn"
        />


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/layoutOnboardingIndicators"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:orientation="horizontal"
        android:padding="15dp"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="@id/skip_btn"
        app:layout_constraintBottom_toBottomOf="@id/skip_btn"
        app:layout_constraintStart_toEndOf="@id/skip_btn"
        app:layout_constraintEnd_toStartOf="@id/next_btn"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/next"
        android:layout_marginBottom="@dimen/_20sdp"
        style="@style/onboarding_text_style"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintBottom_toTopOf="@id/bottom_guide_line"
        android:id="@+id/next_btn"
        />


</androidx.constraintlayout.widget.ConstraintLayout>