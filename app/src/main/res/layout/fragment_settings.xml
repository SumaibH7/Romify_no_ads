<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context="com.bluell.roomdecoration.interiordesign.ui.settings.SettingsFragment">

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.03"
        android:orientation="horizontal"
        android:id="@+id/topguideline"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.05"
        android:id="@+id/start_guide_line"
        android:orientation="vertical"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.97"
        android:id="@+id/bottom_guide_line"
        android:orientation="horizontal"
        />

    <androidx.constraintlayout.widget.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintGuide_percent="0.95"
        android:id="@+id/end_guide_line"
        android:orientation="vertical"
        />


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.085"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/start_guide_line"
        app:layout_constraintEnd_toEndOf="@id/end_guide_line"
        android:id="@+id/tool"
        >


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back_arrow"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/back_btn"
            app:tint="@color/selected_color" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/trash_light"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:padding="@dimen/_5sdp"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/deleteAll"
            android:visibility="gone"
            android:contentDescription="@string/navigate_back"
            app:tint="@color/back_button_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/settings"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginStart="@dimen/_10sdp"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textSize="@dimen/_18sdp"
            android:textColor="@color/home_user_text"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    <ImageView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tool"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        app:layout_constraintHeight_percent="0.22"
        android:background="@drawable/settings_head"
        android:id="@+id/settings_head_image"

        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enjoy_unlimited_downloads"
        app:layout_constraintTop_toTopOf="@id/settings_head_image"
        app:layout_constraintStart_toStartOf="@id/settings_head_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:fontFamily="@font/pragatinarrow_regular"
        android:textColor="@color/onboarding_dark_text"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/head_txt_1"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/unlock_pro_features"
        android:includeFontPadding="false"
        app:layout_constraintTop_toBottomOf="@id/head_txt_1"
        app:layout_constraintStart_toStartOf="@id/head_txt_1"
        android:fontFamily="@font/pragatinarrow_regular"
        android:textColor="@color/onboarding_dark_text"
        android:textSize="@dimen/_12sdp"
        android:id="@+id/head_txt_2"
        />


<!--    <com.google.android.material.button.MaterialButton-->
<!--        android:layout_width="@dimen/_100sdp"-->
<!--        android:layout_height="@dimen/_35sdp"-->
<!--        app:layout_constraintBottom_toBottomOf="@id/settings_head_image"-->
<!--        app:layout_constraintEnd_toEndOf="@id/settings_head_image"-->
<!--        android:layout_marginBottom="@dimen/_10sdp"-->
<!--        android:layout_marginEnd="@dimen/_10sdp"-->
<!--        app:backgroundTint="@color/onboarding_dark_text"-->
<!--        app:icon="@drawable/go_pro"-->
<!--        app:iconTint="@color/white"-->
<!--        android:fontFamily="@font/pragatinarrow_regular"-->
<!--        android:text="@string/go_pro"-->
<!--        android:textColor="@color/white"-->
<!--        android:id="@+id/go_pro"-->
<!--        />-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0dp"
        app:layout_constraintStart_toStartOf="@id/settings_head_image"
        app:layout_constraintEnd_toEndOf="@id/settings_head_image"
        android:layout_height="wrap_content"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/settings_head_image"
        android:layout_marginTop="@dimen/_10sdp"
        android:id="@+id/user_tab"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alex Garaham"
            android:textColor="@color/settings_user_text"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textStyle="bold"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/user_name"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="alexgraham@gmail.com"
            android:textColor="@color/settings_email_text"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textStyle="normal"
            android:textSize="@dimen/_12sdp"
            android:id="@+id/email"
            app:layout_constraintTop_toBottomOf="@id/user_name"
            app:layout_constraintStart_toStartOf="parent"
            />


        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/image"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
    
    
    
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/_10sdp"
        app:layout_constraintTop_toBottomOf="@id/user_tab"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingBottom="@dimen/_20sdp"
        android:clipToPadding="false"
        app:layout_constraintStart_toEndOf="@id/start_guide_line"
        app:layout_constraintEnd_toStartOf="@id/end_guide_line"
        android:fillViewport="true"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                android:visibility="gone"
                android:id="@+id/edit_profile"
                >

                <androidx.cardview.widget.CardView
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    app:cardCornerRadius="@dimen/_35sdp"
                    app:cardBackgroundColor="@color/setting_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/edit_profile_card"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/edit_profile"
                        android:layout_gravity="center"/>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit_profile"
                    app:layout_constraintStart_toEndOf="@id/edit_profile_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/settings_text_color"
                    android:fontFamily="@font/pragatinarrow_regular"
                    android:textSize="@dimen/_12sdp"
                    />
                
                
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/expand"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/profile_expand"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/settings_divider_color"
                    app:layout_constraintStart_toEndOf="@id/edit_profile_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@id/edit_profile_card"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone"
                android:id="@+id/edit_profile_expanded"
                app:layout_constraintTop_toBottomOf="@id/edit_profile"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/display_pic"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardCornerRadius="@dimen/_35sdp"
                        app:cardBackgroundColor="@color/setting_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/display_pic_card"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/display_pic"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/display_picture"
                        app:layout_constraintStart_toEndOf="@id/display_pic_card"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/settings_text_color"
                        android:fontFamily="@font/pragatinarrow_regular"
                        android:textSize="@dimen/_12sdp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/settings_divider_color"
                        app:layout_constraintStart_toEndOf="@id/display_pic_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@id/display_pic_card"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/display_pic"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:id="@+id/edit_name"
                    >

                    <androidx.cardview.widget.CardView
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        app:cardCornerRadius="@dimen/_35sdp"
                        app:cardBackgroundColor="@color/setting_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/edit_name_card"
                        >
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/edit_profile"
                            android:layout_gravity="center"/>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/change_name"
                        app:layout_constraintStart_toEndOf="@id/edit_name_card"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/settings_text_color"
                        android:fontFamily="@font/pragatinarrow_regular"
                        android:textSize="@dimen/_12sdp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/settings_divider_color"
                        app:layout_constraintStart_toEndOf="@id/edit_name_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@id/edit_name_card"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/edit_profile_expanded"
                android:layout_marginTop="@dimen/_5sdp"
                android:id="@+id/favorites"
                >

                <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/indicator"
                    android:backgroundTint="@color/setting_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/favorites_card"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/fav_nav"
                        android:layout_gravity="center"
                        app:tint="#999999"
                        android:layout_centerInParent="true"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/favorites"
                    app:layout_constraintStart_toEndOf="@id/favorites_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/settings_text_color"
                    android:fontFamily="@font/pragatinarrow_regular"
                    android:textSize="@dimen/_12sdp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/settings_divider_color"
                    app:layout_constraintStart_toEndOf="@id/favorites_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@id/favorites_card"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/favorites"
                android:id="@+id/history"
                >

                <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/indicator"
                    android:backgroundTint="@color/setting_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/history_card"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/history_nav"
                        android:layout_gravity="center"
                        android:layout_centerInParent="true"
                        app:tint="#999999" />
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    app:layout_constraintStart_toEndOf="@id/history_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/settings_text_color"
                    android:fontFamily="@font/pragatinarrow_regular"
                    android:textSize="@dimen/_12sdp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/settings_divider_color"
                    app:layout_constraintStart_toEndOf="@id/history_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@id/history_card"/>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/pref_expanded"
                app:layout_constraintTop_toBottomOf="@id/history"
                >
                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/language"
                    >

                    <RelativeLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/indicator"
                        android:backgroundTint="@color/setting_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/language_card"
                        >
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/language"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/language"
                        app:layout_constraintStart_toEndOf="@id/language_card"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/settings_text_color"
                        android:fontFamily="@font/pragatinarrow_regular"
                        android:textSize="@dimen/_12sdp"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/settings_divider_color"
                        app:layout_constraintStart_toEndOf="@id/language_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@id/language_card"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/language"
                    android:id="@+id/theme"
                    >

                    <RelativeLayout
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_40sdp"
                        android:background="@drawable/indicator"
                        android:backgroundTint="@color/setting_circle"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:id="@+id/theme_card"
                        >
                        <ImageView
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/theme"
                            android:layout_gravity="center"/>
                    </RelativeLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/theme"
                        app:layout_constraintStart_toEndOf="@id/theme_card"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginStart="@dimen/_10sdp"
                        android:textColor="@color/settings_text_color"
                        android:fontFamily="@font/pragatinarrow_regular"
                        android:textSize="@dimen/_12sdp"
                        />


                    <androidx.appcompat.widget.SwitchCompat
                        android:id="@+id/mySwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:track="@drawable/switch_track_on"
                        android:thumb="@drawable/thumb_switch"
                        android:checked="false"
                        app:thumbTint="#30456D"
                        app:trackTint="#999999"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@color/settings_divider_color"
                        app:layout_constraintStart_toEndOf="@id/theme_card"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginStart="@dimen/_7sdp"
                        app:layout_constraintTop_toBottomOf="@id/theme_card"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/pref_expanded"
                android:id="@+id/rate_us"
                >

                <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/indicator"
                    android:backgroundTint="@color/setting_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/rate_us_card"
                    >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/rate"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"/>
                </RelativeLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/rate_us"
                    app:layout_constraintStart_toEndOf="@id/rate_us_card"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:textColor="@color/settings_text_color"
                    android:fontFamily="@font/pragatinarrow_regular"
                    android:textSize="@dimen/_12sdp"
                    />

                <View
                    android:layout_width="0dp"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/settings_divider_color"
                    app:layout_constraintStart_toEndOf="@id/rate_us_card"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginStart="@dimen/_7sdp"
                    app:layout_constraintTop_toBottomOf="@id/rate_us_card"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/rate_us"
                android:id="@+id/share"
                >

                <RelativeLayout
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:background="@drawable/indicator"
                    android:backgroundTint="@color/setting_circle"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:id="@+id/share_card"
                    >
                    <ImageView
