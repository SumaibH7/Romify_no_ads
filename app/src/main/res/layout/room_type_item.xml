<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/_130sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/room_type_background"
    app:strokeWidth="@dimen/_1sdp"
    android:layout_marginEnd="@dimen/_7sdp"
    android:layout_gravity="center_horizontal"
    android:layout_marginBottom="@dimen/_7sdp"
    app:strokeColor="@color/card_stroke"

    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/select"
            />


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lock_light"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/locked"
            />

        <com.google.android.material.card.MaterialCardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            app:cardCornerRadius="@dimen/_30sdp"
            app:cardBackgroundColor="@color/room_inner_card_bg"
            app:strokeWidth="0dp"
            app:layout_constraintTop_toBottomOf="@id/select"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/main_card"
            app:layout_constraintEnd_toEndOf="parent"
            >
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/type_dinning_room"
                android:layout_gravity="center"
                android:id="@+id/room_icon"
                app:tint="@color/image_color_filter" />

        </com.google.android.material.card.MaterialCardView>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dining_room"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textColor="@color/room_text_color"
            android:lines="1"
            android:maxLines="1"
            app:layout_constraintTop_toBottomOf="@id/main_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:id="@+id/title_text"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>



</com.google.android.material.card.MaterialCardView>