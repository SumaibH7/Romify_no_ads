<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/splash_bg"
    tools:context="com.bluell.roomdecoration.interiordesign.ui.splash.SplashFragment">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <View
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_90sdp"
            android:id="@+id/splash_animation"
            android:layout_marginBottom="@dimen/_10sdp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:textColor="@color/dark_p_color"
            android:fontFamily="@font/pragatinarrow_regular"
            android:textSize="@dimen/_29sdp"
            app:layout_constraintTop_toBottomOf="@id/splash_animation"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/splash_txt"
            />

    </LinearLayout>

</RelativeLayout>