    <style name="Theme.RoomifyAi" parent="Base.Theme.RoomifyAi" />

    <style name="FullScreenDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">false</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
    </style>

    <style name="onboarding_text_style">
        <item name="android:textColor">@color/onboarding_dark_text</item>
        <item name="android:fontFamily">@font/pragatinarrow_regular</item>
        <item name="android:textSize">@dimen/_14sdp</item>
    </style>

    <style name="onboarding_head_text_style">
        <item name="android:textColor">#333333</item>
        <item name="android:fontFamily">@font/pragatinarrow_regular</item>
        <item name="android:textSize">@dimen/_20sdp</item>
    </style>

    <style name="onboarding_des_text_style">
        <item name="android:textColor">#999999</item>
        <item name="android:fontFamily">@font/pragatinarrow_regular</item>
        <item name="android:textSize">@dimen/_16sdp</item>
    </style>

    <style name="button_onbaording">
        <item name="android:backgroundTint">#052460</item>
    </style>

    <style name="bottom_nav_color">
        <item name="backgroundTint">@color/white</item>
    </style>

    <style name="room_type_unselected">

        <item name="android:src">@drawable/item_unselected_day</item>
    </style>

    <style name="room_type_selected">

        <item name="android:src">@drawable/item_selected_day</item>
    </style>

    <style name="IconWithTintStyle">
        <item name="android:tint">@color/white</item>
    </style>

    <style name="toolBarIcon">
        <item name="android:tint">@color/image_color_filter</item>
    </style>

    <style name="room_style_unselected">

        <item name="android:src">@drawable/style_unselected_day</item>
    </style>

    <style name="room_style_selected">

        <item name="android:src">@drawable/style_selected_day</item>
    </style>


    <style name="BottomSheetDialog" parent="@style/ThemeOverlay.MaterialComponents.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheet</item>
        <item name="android:colorBackground">@color/background</item>
    </style>
    <style name="BottomSheet" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="backgroundTint">@android:color/transparent</item>
    </style>

    <style name="progressBarBlue" parent="@style/Theme.AppCompat">
        <item name="colorAccent">@color/icon_selected_color</item>
    </style>

    <style name="NewDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="titleTextColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="customRoundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_10sdp</item>
    </style>

    <style name="customRoundedImageViewGenerate" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_5sdp</item>
    </style>

    <style name="RoundedCornersDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@drawable/dialog_rounded_corners_background</item>

    </style>

    <style name="customRoundedImageViewGenerated" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/_15sdp</item>
    </style>
</resources>